//  2D array is known as a matrix or we can say it is an array of arrays.
#include<iostream>
using namespace std;

int main(){

    //  int a[2][3] = {1,2,3,4,5,6};  // --> Declaration and Initialization of array at Compile Time
    int a[2][3]; // --> Declaration of 2D array

    
    // INITIALIZATION AT RUN TIME -- Taking elements from user as input at run-time
    cout<<"Enter the elements"<<endl;
    for(int i=0; i<2; i++){
        for(int j=0;j<3;j++){
            cin>>a[i][j];
        }
    }
    // Printing elements of 2D array 
    cout<<"Elements of 2D array are : "<<endl;
    for(int i=0; i<2; i++){
        for(int j=0;j<3;j++){
            cout<<a[i][j]<<endl;
        }
    }

    // Extracting a particular element from array using indexing....
    cout<<a[1][1];


    return 0;
}
